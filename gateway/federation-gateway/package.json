{
  "name": "federation-gateway",
  "version": "1.0.0",
  "description": "Hive Gateway for federating GraphQL services",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "gateway": "hive-gateway supergraph",
    "compose": "export APOLLO_ELV2_LICENSE=accept && rover supergraph compose --log trace --config supergraph.json --output supergraph.graphql"
  },
  "dependencies": {
    "@graphql-hive/gateway": "^1.10.1",
    "graphql": "^16.8.1",
    "express": "^4.18.2",
    "@apollo/rover": "^0.35.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "graphql",
    "federation",
    "hive",
    "gateway"
  ],
  "author": "",
  "license": "MIT"
}